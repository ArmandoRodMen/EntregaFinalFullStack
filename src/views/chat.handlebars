<div class="section">
    <div class="section">
        <a class="btn btn-warning" href="/api/sessions/current">Checar mi rol</a>
        <a class="btn btn-info" href="/chat">Chat</a>
        <a class="btn btn-success" href="/products">Productos</a>
        <a class="btn btn-dark" href="/documents">Subir documentos</a>
        <a class="btn btn-secondary" href="/cart/{{idCart}}">Mi Carrito {{idCart}}</a>
        <a class="btn btn-danger" href="/api/sessions/{{idUser}}/signout">Logout {{idUser}}</a>
    </div>
    
    <div id="chat" class="mb-3">
        {{#each messages}}
        <article class="message is-link">
            <div class="message-header">
                <h3>{{username}} dice:</h3>
            </div>
            <div class="message-body">
                <p>{{message}}</p>
            </div>
        </article>
        {{/each}}
    </div>

    <h2 class="subtitle is-2" >Chat de</h2>
    <h2 class="subtitle is-3" id="idUser">{{idUser}}</h2>
    <h2 class="subtitle is-3" id="email">{{email}}</h2>
    <h3 class="subtitle is-3" id="username">{{username}}</h3>
    <h4 class="subtitle is-4" id="role">{{role}}</h4>
    <form id="chatForm">
        <div class="mb-3">
            <label for="messageInput" class="form-label">Manda un mensaje</label>
            <textarea class="form-control" id="messageInput" rows="3"></textarea>
            <br>
            <button class="btn btn-primary" id="sendMessage">Enviar</button>
        </div>
    </form>
</div>

<script src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="/js/chat.js"></script>
